<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 눌린 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_primary_pressed" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/button_primary_pressed" />
        </shape>
    </item>

    <!-- 비활성 상태 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_secondary" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/button_secondary" />
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_primary" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/button_primary" />
            <padding android:left="16dp" android:right="16dp" android:top="12dp" android:bottom="12dp" />
        </shape>
    </item>
</selector>